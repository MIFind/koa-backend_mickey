{
  "appenders": {
    "console": {
      "type": "console"
    },
    "default": {
      "type": "file",
      "filename": "logs/log_file.log",
      "maxLogSize": 20480000,
      "backups": 30
    },
    "debug": {
      "type": "file",
      "filename": "logs/debug_log_file.log",
      "maxLogSize": 20480000,
      "backups": 3
    }
  },
  "categories": {
    "default": {
      "appenders": [
        "console",
        "default"
      ],
      "level": "debug"
    },
    "debug": {
      "appenders": [
        "debug"
      ],
      "level": "debug"
    }
  }
}